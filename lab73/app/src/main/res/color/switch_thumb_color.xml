<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the switch is checked -->
    <item android:state_checked="true" android:color="@android:color/holo_green_light" /> <!-- Set the color to green when checked -->
    <!-- Default state (unchecked) -->
    <item android:color="@android:color/darker_gray" /> <!-- Set the color to gray when unchecked -->
</selector>
